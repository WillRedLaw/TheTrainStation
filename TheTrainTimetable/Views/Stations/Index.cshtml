@model IEnumerable<TheTrainTimetable.Models.Station>

@{
    ViewBag.Title = "Stations";
}

<h3>Below you can Create, Edit, and Delete as well as see data currently in the database for Stations</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NorthBound)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SouthBound)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrainCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NorthBound)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SouthBound)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StationiD }) |
            @Html.ActionLink("Details", "Details", new { id=item.StationiD }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StationiD })
        </td>
    </tr>
}

</table>
