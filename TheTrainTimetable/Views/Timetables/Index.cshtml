@model IEnumerable<TheTrainTimetable.Models.Timetable>

@{
    ViewBag.Title = "Welcome to Timetables";
}

<h3>Below you can Create, Edit, and Delete as well as see data currently in the database for Timetables</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TimetableDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimetableArrival)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimetableDepart)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TimetableDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimetableArrival)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimetableDepart)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TimetableiD }) |
            @Html.ActionLink("Details", "Details", new { id=item.TimetableiD }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TimetableiD })
        </td>
    </tr>
}

</table>
